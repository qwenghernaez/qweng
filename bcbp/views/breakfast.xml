<odoo>
	<data noupdate="1">

		<record model="ir.actions.act_window" id="breakfast_action">
            <field name="name">Breakfast</field>
            <field name="res_model">bcbp.breakfast</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first breakfast</p>
            </field>
        </record>

        <record model="ir.ui.view" id="breakfast_form_view">
            <field name="name">breakfast.form</field>
            <field name="model">bcbp.breakfast</field>
            <field name="arch" type="xml">
                <form string="Center Form">
                    <sheet>
                        <group>
                        	<field name="name" />
                        	<field name="type_breakfast" />
                            <field name="datetime_breakfast" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="breakfast_tree_view">
            <field name="name">breakfast.tree</field>
            <field name="model">bcbp.breakfast/field>
            <field name="arch" type="xml">
               <tree string="Breakfast">
                    <field name="name" />
                    <field name="type_breakfast" />
                    <field name="datetime_breakfast" />
               </tree>
            </field>
        </record>

	</data>
</odoo>