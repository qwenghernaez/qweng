<odoo>
	<data noupdate="1">

		<record model="ir.actions.act_window" id="event_action">
            <field name="name">Event</field>
            <field name="res_model">bcbp.event</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first event</p>
            </field>
        </record>

        <record model="ir.ui.view" id="event_form_view">
            <field name="name">event.form</field>
            <field name="model">bcbp.event</field>
            <field name="arch" type="xml">
                <form string="Center Form">
                    <sheet>
                        <group>
                        	<field name="name" />
                        	<field name="datetime_attend" />
                            <field name="event_type" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="event_tree_view">
            <field name="name">event.tree</field>
            <field name="model">bcbp.event/field>
            <field name="arch" type="xml">
               <tree string="Event">
                    <field name="name" />
                    <field name="datetime_attend" />
                    <field name="event_type" />
               </tree>
            </field>
        </record>

	</data>
</odoo>