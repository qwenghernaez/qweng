<odoo>
	<data noupdate="1">

		<record model="ir.actions.act_window" id="donation_action">
            <field name="name">Event</field>
            <field name="res_model">bcbp.donation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first donation</p>
            </field>
        </record>

        <record model="ir.ui.view" id="donation_form_view">
            <field name="name">donation.form</field>
            <field name="model">bcbp.donation</field>
            <field name="arch" type="xml">
                <form string="Center Form">
                    <sheet>
                        <group>
                        	<field name="name" />
                        	<field name="datetime_donate" />
                            <field name="type_donation" />
                            <field name="donation_amount" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="donation_tree_view">
            <field name="name">donation.tree</field>
            <field name="model">bcbp.donation/field>
            <field name="arch" type="xml">
               <tree string="Event">
                    <field name="name" />
                    <field name="datetime_donate" />
                    <field name="type_donation" />
                    <field name="donation_amount" />
               </tree>
            </field>
        </record>

	</data>
</odoo>